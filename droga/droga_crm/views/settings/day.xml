<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="droga_crm_customer_settings_day_action" model="ir.actions.act_window">
        <field name="name">Day settings</field>
        <field name="res_model">droga.crm.settings.day</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="droga_crm_customer_day_view_tree" model="ir.ui.view">
        <field name="name">droga.crm.settings.day.view.tree</field>
        <field name="model">droga.crm.settings.da6</field>
        <field name="arch" type="xml">
            <tree string="" editable="top" delete="0">
                <field name="day" ></field>
            </tree>
        </field>
    </record>


    <menuitem
        id="droga_crm_customer_settings_day"
        name="Day settings"
        action="droga_crm_customer_settings_day_action"
        parent="customer_settings_sub_menu"
        sequence="20"/>

</odoo>