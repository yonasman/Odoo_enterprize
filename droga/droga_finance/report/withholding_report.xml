<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- action for witholding report-->
    <record id="droga_finance_reports_withholding_excel_action" model="ir.actions.act_window">
        <field name="name">Withholding Report - Excel</field>
        <field name="res_model">droga.finance.witholding.excel.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- report form -->
    <record id="droga_finance_reports_witholding_excel_form" model="ir.ui.view">
        <field name="name">droga.finance.witholding.excel.report.form</field>
        <field name="model">droga.finance.witholding.excel.report</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <group>
                        <field name="report" required='1'/>
                        <field name="date_from" required='1'/>
                        <field name="date_to" required='1'/>
                        <field name="company_id" options="{'no_create':True,'no_open':True}"></field>
                    </group>
                </group>
                <footer>
                    <button name="action_get_xls" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- withhodling printout -->
    <record id="droga_account_withholding_printout_action" model="ir.actions.report">
        <field name="name">Withholding Printout</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">droga_finance.droga_account_withholding_printout_table_report</field>
        <field name="report_file">droga_finance.droga_account_withholding_printout_table_report</field>
        <field name="print_report_name">'Withholding Printout - %s' % (object.name)
        </field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

