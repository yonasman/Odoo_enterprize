<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="droga_pharma_current_status_action" model="ir.actions.act_window">
        <field name="name">Current status</field>
        <field name="res_model">droga.pharma.current_status</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="droga_pharma_current_status_tree" model="ir.ui.view">
        <field name="name">droga.pharma.current.status.view.tree</field>
        <field name="model">droga.pharma.current_status</field>
        <field name="arch" type="xml">
            <tree string="" editable="top" delete="0">
                <field name="c_status"></field>
                <field name="descr"></field>
                <field name="status"></field>
            </tree>
        </field>
    </record>

</odoo>